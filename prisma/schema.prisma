generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id                 String   @id @default(cuid())
  homeTeam           String
  awayTeam           String
  home1h             Int      @default(0)
  away1h             Int      @default(0)
  home2h             Int      @default(0)
  away2h             Int      @default(0)
  firstHalfFinished  Boolean  @default(false)
  secondHalfFinished Boolean  @default(false)
  status             String   @default("live") // live, finished
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  bets               Bet[]
}

model Coupon {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bets      Bet[]
}

model Bet {
  id        String   @id @default(cuid())
  betType   String
  betValue  String
  couponId  String
  matchId   String
  coupon    Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([couponId, matchId, betType, betValue])
}
